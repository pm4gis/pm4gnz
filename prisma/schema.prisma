generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum MembershipRole {
  ORG_ADMIN
  PROJECT_ADMIN
  PROJECT_MEMBER
  READ_ONLY
}

enum ProjectMode {
  WATERFALL
  AGILE
  HYBRID
}

enum TaskStatus {
  NOT_STARTED
  IN_PROGRESS
  BLOCKED
  DONE
}

enum TaskPriority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

enum DependencyType {
  FS
  SS
  FF
  SF
}

model Organisation {
  id          String       @id @default(cuid())
  name        String
  slug        String       @unique
  createdAt   DateTime     @default(now())
  updatedAt   DateTime     @updatedAt
  deletedAt   DateTime?
  memberships Membership[]
  projects    Project[]
  resources   ResourceAvailability[]
  auditLogs   AuditLog[]
}

model User {
  id             String       @id @default(cuid())
  email          String       @unique
  name           String?
  passwordHash   String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  deletedAt      DateTime?
  memberships    Membership[]
  tasksAssigned  TaskAssignment[]
  resourceProfile ResourceAvailability[]
  auditEntries   AuditLog[]

  accounts Account[]
  sessions Session[]
}

model Membership {
  id             String         @id @default(cuid())
  organisationId String
  userId         String
  role           MembershipRole @default(PROJECT_MEMBER)
  createdAt      DateTime       @default(now())
  updatedAt      DateTime       @updatedAt

  organisation Organisation @relation(fields: [organisationId], references: [id])
  user         User         @relation(fields: [userId], references: [id])

  @@unique([organisationId, userId])
  @@index([userId])
}

model Project {
  id             String        @id @default(cuid())
  organisationId String
  name           String
  code           String
  mode           ProjectMode
  createdById    String
  createdAt      DateTime      @default(now())
  updatedAt      DateTime      @updatedAt
  deletedAt      DateTime?

  organisation Organisation       @relation(fields: [organisationId], references: [id])
  tasks        Task[]
  sprints      Sprint[]
  columns      BoardColumn[]
  assignments  TaskAssignment[]
  baselines    BaselineSnapshot[]
  auditLogs    AuditLog[]

  @@unique([organisationId, code])
  @@index([organisationId, mode])
}

model Task {
  id                 String        @id @default(cuid())
  projectId          String
  parentId           String?
  title              String
  description        String?
  status             TaskStatus    @default(NOT_STARTED)
  priority           TaskPriority  @default(MEDIUM)
  startDate          DateTime?
  finishDate         DateTime?
  durationDays       Int?
  percentComplete    Int           @default(0)
  estimatedHours     Float         @default(0)
  actualHours        Float         @default(0)
  milestone          Boolean       @default(false)
  ordering           Int           @default(0)
  constraintType     String        @default("ASAP")
  constraintDate     DateTime?
  baselineStartDate  DateTime?
  baselineFinishDate DateTime?
  baselineDuration   Int?
  rowVersion         Int           @default(1)
  createdAt          DateTime      @default(now())
  updatedAt          DateTime      @updatedAt
  deletedAt          DateTime?

  project       Project           @relation(fields: [projectId], references: [id])
  parent        Task?             @relation("TaskHierarchy", fields: [parentId], references: [id])
  children      Task[]            @relation("TaskHierarchy")
  predecessors  TaskDependency[]  @relation("DependencySuccessor")
  successors    TaskDependency[]  @relation("DependencyPredecessor")
  assignments   TaskAssignment[]

  @@index([projectId, parentId])
  @@index([projectId, status])
  @@index([projectId, startDate, finishDate])
}

model TaskDependency {
  id                 String         @id @default(cuid())
  projectId          String
  predecessorTaskId  String
  successorTaskId    String
  dependencyType     DependencyType @default(FS)
  lagDays            Int            @default(0)
  createdAt          DateTime       @default(now())
  updatedAt          DateTime       @updatedAt
  deletedAt          DateTime?

  project     Project @relation(fields: [projectId], references: [id])
  predecessor Task    @relation("DependencyPredecessor", fields: [predecessorTaskId], references: [id])
  successor   Task    @relation("DependencySuccessor", fields: [successorTaskId], references: [id])

  @@unique([projectId, predecessorTaskId, successorTaskId, dependencyType])
  @@index([projectId, successorTaskId])
}

model Sprint {
  id          String    @id @default(cuid())
  projectId   String
  name        String
  goal        String?
  startsOn    DateTime
  endsOn      DateTime
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt

  project Project @relation(fields: [projectId], references: [id])

  @@index([projectId, startsOn])
}

model BoardColumn {
  id        String   @id @default(cuid())
  projectId String
  name      String
  ordering  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  project Project @relation(fields: [projectId], references: [id])

  @@unique([projectId, name])
  @@index([projectId, ordering])
}

model TaskAssignment {
  id        String   @id @default(cuid())
  projectId String
  taskId    String
  userId    String
  units     Float    @default(100)
  workHours Float    @default(0)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  deletedAt DateTime?

  project Project @relation(fields: [projectId], references: [id])
  task    Task    @relation(fields: [taskId], references: [id])
  user    User    @relation(fields: [userId], references: [id])

  @@unique([taskId, userId])
  @@index([projectId, userId])
}

model ResourceAvailability {
  id             String   @id @default(cuid())
  organisationId String
  userId         String
  availability   Float    @default(100)
  effectiveFrom  DateTime @default(now())
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  organisation Organisation @relation(fields: [organisationId], references: [id])
  user         User         @relation(fields: [userId], references: [id])

  @@index([organisationId, userId, effectiveFrom])
}

model BaselineSnapshot {
  id          String   @id @default(cuid())
  projectId   String
  name        String
  createdAt   DateTime @default(now())
  createdById String
  snapshot    Json

  project Project @relation(fields: [projectId], references: [id])

  @@index([projectId, createdAt])
}

model AuditLog {
  id             String   @id @default(cuid())
  organisationId String
  projectId      String?
  actorUserId    String?
  entityType     String
  entityId       String
  action         String
  metadata       Json?
  createdAt      DateTime @default(now())

  organisation Organisation @relation(fields: [organisationId], references: [id])
  actor        User?        @relation(fields: [actorUserId], references: [id])
  project      Project?     @relation(fields: [projectId], references: [id])

  @@index([organisationId, createdAt])
  @@index([projectId, createdAt])
}

model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String?
  access_token      String?
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String?
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}
